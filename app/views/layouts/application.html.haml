!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "Spencer, Mayoras, Henderson, & Kock Attorneys at Law"
    = javascript_include_tag('jquery-1.3.1.js' ,'jquery-ui-personalized-1.6rc6.js', "facebox.js", 'jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'application.js', 'langchange.js', 'jquery.validate.js')
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag "ui.all.css","facebox.css","application.css",:media => 'screen, projection'
    /[if IE]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body  
    #page_frame
      - if flash[:notice]
        .flash_notice
          %a{"href"=>"#", "id"=>"close_notification", "onclick"=>"$(this).parent().remove();"}
            .span X
          = h(flash[:notice])
      .page_wrap
        .header
        .top_menu
          %ul
            %li 
              %a{"href"=>"/"} Home
            %li 
              %a{"href"=>"/partners"} Partners
            %li 
              %a{"href"=>"/services"} Services
            %li 
              %a{"href"=>"/locations"} Locations
            %li 
              %a{"href"=>"/contact_us"} Contact US

        .options_menu
          %ul
            %li 
              %a.facebox{"href"=>"/send_mail_to_partners"} Send an Email to the Partners
            %li 
              %a.facebox{"href"=>"/send_mail_to_friend"} Send this page to a friend

        .languages
          .lang-choice
            %span{ "id"=>"lang-en"} English
            %span{ "id"=>"lang-fr"} Fran√ßais 

 
        #content.clearfix
          = yield
        .footer
        .copy_right