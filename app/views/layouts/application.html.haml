!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8", :name=>"keywords", :content=>"lawyer,attorney,law firm,legal,law office,legal services,fairfax,fredericksburg,virgina,criminal law"}
    %title= "Spencer, Mayoras, Henderson, & Koch, PLC Attorneys at Law"
    %link{"rel"=>"shortcut icon", "href"=>"/images/favicon.ico"}
    = stylesheet_link_tag("ui.all.css","facebox.css","btn.css","application.css","jquery.lightbox-0.5.css",:media => 'screen, projection')
    / = auto_discovery_link_tag :atom, posts_path(:atom)
    = javascript_include_tag('jquery-1.3.1.js', 'jquery-ui-personalized-1.6rc6.js', "facebox.js", 'jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'application.js', 'langchange.js', 'jquery.validate.js', "btn.js", "jquery.lightbox-0.5.min.js",'http://api.recaptcha.net/js/recaptcha_ajax.js')
    /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    %script{"src"=>"http://codinginparadise.org/projects/purple-include/purple-include.js"}
%body
  #body_wrap
    #page_frame
      - if flash[:notice]
        .flash_notice
          %a{"href"=>"#", "id"=>"close_notification", "onclick"=>"$(this).parent().remove();"}
            %span Close
          .flash_notice_text
            = h(flash[:notice])
      .page_wrap
        .top_header
        .top_menu
          %ul.clearfix
            %li 
              %a{"href"=>"/"} Home
            %li.partners_menu{"onmouseover"=>"$('.partners_menu_flyout').show();","onmouseout"=>"$('.partners_menu_flyout').hide();"} 
              %a{"href"=>"/partners", :class=>((params['action'] == "partners") ? "current" : "")} Partners
              .partners_menu_flyout{"style"=>"display:none;"}
                .menu_sub_div 
                  %a{"href"=>"/partners?partner_name=johnspencer"} John Spencer
                .menu_sub_div
                  %a{"href"=>"/partners?partner_name=johnmayoras"} John Mayoras
                .menu_sub_div
                  %a{"href"=>"/partners?partner_name=ashleyhenderson"} Ashley Henderson
                .menu_sub_div
                  %a{"href"=>"/partners?partner_name=pricekoch"} Price Koch
                .menu_sub_div
                  %a{"href"=>"/partners?partner_name=andycornick"} Andy Cornick
                
            %li 
              %a{"href"=>"/services", :class=>((params['action'] == "services") ? "current" : "")} Services
            %li 
              %a{"href"=>"/locations", :class=>((params['action'] == "locations") ? "current" : "")} Locations
            %li 
              %a{"href"=>"/posts", :class=>((params['action'] == "index" && params['controller'] == "posts" ) ? "current" : "")} News Blog
            - if logged_in?
              %li 
                %a{"href"=>"/users", :class=>((params['action'] == "index" && params['controller'] == "users" ) ? "current" : "")} SMHK Law Users
              
              

        .content_wrap.clearfix
          = yield
        .page_footer
          .languages
            - if logged_in?
              = h current_user.formal_name 
              is logged in! &nbsp;
              = link_to 'Log Out?', '/logout'
            - else
              = link_to 'Partner Login', '/login', :class=>"facebox"
          
            / .lang-choice
            /   %span{ "id"=>"lang-en"} English 
            /   or 
            /   %span{ "id"=>"lang-fr"} Spanish 
          .small_icon
            %img{"src"=>"/images/mini_icon.png", "height"=>"30"}
        .copy_right
          %p 
            Designed and Maintained by
            %br
            %a{"href"=>"http://www.kenderson.net"} Kenderson Consulting
            %br
            &copy; 2009 - 
            = DateTime.now.year
        
%script{"type"=>"text/javascript"}
  var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www."); document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

%script{"type"=>"text/javascript"}
  try {var pageTracker = _gat._getTracker("UA-10020250-1"); pageTracker._trackPageview();} catch(err) {}