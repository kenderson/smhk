!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "Spencer, Mayoras, Henderson, & Kock Attorneys at Law"
    = javascript_include_tag('jquery-1.3.1.js' ,'jquery-ui-personalized-1.6rc6.js', "facebox.js", 'jquery.bgiframe.min.js', 'jquery.livequery.min.js', 'application.js', 'langchange.js', 'jquery.validate.js', "btn.js")
    = stylesheet_link_tag("ui.all.css","facebox.css","btn.css","application.css",:media => 'screen, projection')
    /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  %body  
    #page_frame
      - if flash[:notice]
        .flash_notice
          %a{"href"=>"#", "id"=>"close_notification", "onclick"=>"$(this).parent().remove();"}
            .span X
          = h(flash[:notice])
      .page_wrap
        .top_header
        .top_menu
          %ul
            %li 
              %a{"href"=>"/"} Home
            %li.partners_menu{"onmouseover"=>"$('.partners_menu_flyout').show();","onmouseout"=>"$('.partners_menu_flyout').hide();"} 
              %a{"href"=>"/partners"} Partners
              .partners_menu_flyout{"style"=>"display:none;"}
                %ul
                  %li 
                    %a{"href"=>"/partners?partner_name=johnspencer"} John Spencer
                  %li 
                    %a{"href"=>"/partners?partner_name=johnmayoras"} John Mayoras
                  %li 
                    %a{"href"=>"/partners?partner_name=ashleyhenderson"} Ashley Henderson
                  %li
                    %a{"href"=>"/partners?partner_name=pricekoch"} Price Koch
            %li 
              %a{"href"=>"/services"} Services
            %li 
              %a{"href"=>"/locations"} Locations
 
        .content.clearfix
          = yield
        .page_footer
          .languages
            .lang-choice
              %span{ "id"=>"lang-en"} English 
              or 
              %span{ "id"=>"lang-fr"} Spanish 
          .small_icon
            %img{"src"=>"/images/mini_icon.png", "height"=>"30"}
        .copy_right
          %p 
            &copy; 
            = DateTime.now.year
            kenderson
        
