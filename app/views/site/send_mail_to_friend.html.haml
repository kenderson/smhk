#mailer_wrap
  %h1 Send this page to a Friend!
  
  %form{"name"=>"smhkform", "id"=>"smhkform", "action"=>"/send_mail_to_friend", "method"=>"POST"}
    %table
      %tr
        %td{"valign"=>"top"}
          %label.text_label Your Name (Required)
        %td{"valign"=>"top"}
          %input{"type"=>"text", "name"=>"name", "class"=>"required"}
          .div_spacer
      %tr
        %td{"valign"=>"top"}
          %label.text_label Your Email (Required)
        %td{"valign"=>"top"}
          %input{"type"=>"text", "name"=>"contact", "class"=>"required email"}
          .div_spacer
      %tr
        %td{"valign"=>"top"}
          %label.text_label Your Message (Optional)
        %td{"valign"=>"top"}
          %textarea{"type"=>"text", "name"=>"message_body", "class"=>"required"}
          .div_spacer
    %input{"class"=>"submit", "value"=>"Send", "type"=>"submit", "onClick" =>"$(\"#smhkform\").validate();" }
